      <!-- user to sign in -->
<% if !user_signed_in? %>
  <div class="text-center container-fluid bg-silver-dark bg-cinema" style="margin-top:-30px;">
    <h1 class="section-title text-center">
      Your favourite movie reviews on one site.
      </br>
      If you don't have account, sign up!
      </h1>
    <p><%= link_to "Register in", new_user_registration_path, class: "btn btn-red btn-lg" %></p>
  </div>
<% end %>
      <!-- Best movies -->
  <div class="container-fluid bg-silver">
    <h1 class="text-center center-block text-muted" style="color: #fff">Best movies reviews</h1>
    </br>
    <div class="row text-center center-block">
      <div class="col-md-2"></div>
    <% @best_movies.each do |movie| %>
       <div class="col-md-2">
        <%= link_to (image_tag movie.image.url(:medium), class: 'image img-responsive'), movie %>
        <h3 style="color:#fb0000;font-family:"Sans-serif";font-weight:bold;"><img src="/assets/star-on.png" width="20" height="20"> <%= movie.rating %></h3>
    </div>
    <% end %>
</div>
  </div>
  
</br>

      <!-- ALL movies -->
<div class="container-fluid bg-silver-dark">
  <h1 class="text-center center-block text-muted" style="color: #fff">All movies on this site</h1>
</br>
  <div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3" style="margin-top:40px">
        <%= link_to (image_tag movie.image.url(:medium), class: 'image img-responsive'), movie %>
    </div>
  <% end %>
</div>
</div>

      <!-- Footer -->
    <footer class="text-center">
        <a href="#moviePage" title="To Top">
            <span class="glyphicon glyphicon-chevron-up"></span>
