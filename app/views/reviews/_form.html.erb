<!-- < %= form_for(@review) do |f| %> nested - reviw dostepny w formularzu movie
      zagniezdzenie dla routes-->
<%= form_for([@movie, @review]) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="star-rating" required=""></div>
    
    <!--
    < %= f.label :rating %><br>
    < %= f.number_field :rating %> -->
  </div>
  <div class="field form-group">
    <%= f.label :comment %><br>
    <%= f.text_area :comment, class:"form-control", style:"min-height:400px; max-width:800px",placeholder:"Tap to add new review" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn"%>
  </div>
<% end %>

<script>
  $('.star-rating').raty({
    path: "/assets/",
    scoreName: 'review[rating]' // Name of the hidden field that holds the score value.
  });
</script>